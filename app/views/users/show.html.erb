<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render 'users/userinfo',user: @user,movie: @movie %>
    
    <div class="col-md-8 offset-md-1">
      <h2>movies</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td>
            <%= link_to user_path(movie.user) do %>
            <%= attachment_image_tag movie.user, :profile_image,:fill,40,40, format: "jpeg",fallback: "no_image.jpg"%>
            <% end %>
            </td>
            <td><%= link_to movie.title, movie_path(movie.id) %></td>
            <td class="fix-body"><%= movie.body %></td>
            <td class="fix-tb">コメント数: <%= movie.movie_comments.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    
  </div>
</div>