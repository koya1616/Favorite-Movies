<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-ma-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      
      <div id="error_explanation">
      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      </div>
      
      <%= form_with model: @user, local: true do |f|%>
        <div class="form-group">
          <label for="movie_title">Name</label>
          <div><%= f.text_field :name,size: 50 %></div>
        </div>
        <div class="form-group">
        <label for="movie_title">Image</label>
        <div><%= f.attachment_field :profile_image %></div>
        </div>
        <div class="form-group">
          <label for="movie_opinion">Introduction</label>
          <div><%= f.text_area :introduction,size: "50x2" %></div>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
      
    </div>
  </div>
</div>