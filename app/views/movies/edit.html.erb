<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-ma-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing movie</h1>
      
      <div id="error_explanation">
      <% if @movie.errors.any? %>
      <h3><%= @movie.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      </div>
      
      <%= form_with model: @movie, local: true do |f|%>
        <div class="form-group">
          <label for="movie_title">Title</label>
          <div><%= f.text_field :title,size: 50 %></div>
        </div>
        <div class="form-group">
          <label for="movie_opinion">Opinion</label>
          <div><%= f.text_area :body,size: "50x2" %></div>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update movie" class="btn btn-success" data-disable-with="Update movie" style="user-select: auto;">
        </div>
      <% end %>
      <%= link_to "Show",movie_path(@movie)%>
      |
      <%= link_to "Back",movies_path%>
      
    </div>
  </div>
</div>